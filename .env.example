# Discord
DISCORD_TOKEN=
DISCORD_CHANNELS=

# Slack
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

# Discourse (forum)
DISCOURSE_BASE_URL=https://forum.example.org
DISCOURSE_API_KEY=your_api_key_here
DISCOURSE_API_USERNAME=system
DISCOURSE_LOOKBACK_HOURS=24
DISCOURSE_DEBUG_VERBOSE=false

# Gemini LLM
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
# 2048 should work for average message volumes; increase if you have more content to summarize
MAX_SUMMARY_TOKENS=1500

# Pipeline
DRY_RUN=true
LOG_LEVEL=info
#LOG_LEVEL=debug
# Enable flags: set to false to disable a source entirely
ENABLE_DISCORD=true
ENABLE_DISCOURSE=true

# Digest Config
DIGEST_WINDOW_HOURS=24

# Message Filters
MIN_MESSAGE_LENGTH=20         # Minimum message length to include (default: 20)
EXCLUDE_COMMANDS=true         # Exclude messages starting with ! or / (default: true)
EXCLUDE_LINK_ONLY=true        # Exclude messages that are only a link (default: true)

# Attribution (per-topic participants)
ATTRIBUTION_ENABLED=true              # Enable per-topic participant attribution (default: false)
TOPIC_GAP_MINUTES=60                   # Inactivity gap in minutes to split topic clusters
MAX_TOPIC_PARTICIPANTS=6               # Max names shown per topic
ATTRIBUTION_FALLBACK_ENABLED=true      # Inject missing Participants lines if LLM omits them
